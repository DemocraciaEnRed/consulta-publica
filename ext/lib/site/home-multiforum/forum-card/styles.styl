.forum-card
  width: 100%
  display: flex
  flex-direction: row
  .forum-card-img
    width: 50%
    img
      width: 100%
  
  .forum-card-data
    width: 50%
    display: flex
    flex-wrap: wrap
    flex-direction: column
    padding-left: 74px
    color: #000
    .forum-card-header
      .forum-card-title
        font-size: 30px
        font-weight: 400
        line-height: 37px
        margin: 0
      .forum-card-author
        font-size: 20px
        font-weight: 400
        &.forum-card-name
          color: #0B95D6
          margin-left: 5px

    .forum-card-body
      .forum-card-description
        font-size: 20px
        font-weight: 300
        color: #595959

    .forum-card-footer
      .btn.btn-link
        text-decoration: none !important