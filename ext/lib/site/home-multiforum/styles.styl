@import '../../../node_modules/argob-poncho/dist/css/poncho.css'
@import './forum-container/styles.styl'

.jumbotron_body
  padding: 40px 0 30px 0 !important
  .container
    .lead
      font-size:18px
      &.highlight
        font-size:22px
      span 
        color:#0695d6
.ext-site-home-multiforum
  background: transparent

  .forums-list
    display: flex
    flex-direction: column
    flex-wrap: wrap
    padding-top: 1em

    .forums-list-title
      font-size: 35px
      text-align: center
      font-weight: 500
      margin-bottom: 20px
      
    .forums-list-item
      max-width: 100%
      width: 100%
      margin: 0 10px 20px

      @media (min-width: 992px)
        width: 440px

  .cover
    text-align: center

    h1
      max-width: 500px
      margin: 0 auto .3em

    .jumbotron_body
      background-color: rgba(#000, .5)

  .fa-group
  .fa-newspaper-o
  .fa-bullhorn
  .arrow-down
    background-size: cover
    background-repeat: no-repeat
    display: inline-block
    margin-top: 0
    margin-right: 3%
    width: 70px
    height: 55px
    margin-bottom:20px
    @media screen and (max-width: 750px)
      width: 40px
      height: 30px
      margin-top:25px

  .lead-paragraph
    margin-top:2em
    text-align:center
    font-size:20px
    padding-left: 5%;
    padding-right: 5%;
    &.last
      text-transform:uppercase
      flex-direction:column
      justify-content:center
  .arrow
    text-align:center

  

  .section-icons
    font-weight:600
    margin-top:20px
    .section-icon
      display: flex
      flex-direction: column
      align-items: center
      span
        text-transform:uppercase
        color:#0695d6

  .fa-group
    background-image: url("ext/lib/site/home-multiforum/users.svg")

  .fa-newspaper-o
    background-image: url("ext/lib/site/home-multiforum/newspaper.svg")

  .fa-bullhorn
    background-image: url("ext/lib/site/home-multiforum/bullhorn.svg")
  
  .arrow-down  
    background-image: url("ext/lib/site/home-multiforum/arrow-down.svg")
    width:20px
    height:20px


