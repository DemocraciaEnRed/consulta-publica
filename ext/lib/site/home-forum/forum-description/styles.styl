.container.forum-description
  .row
    .col-md-12.content
      margin-top: 27px
      font-size: 20px
      font-weight: 300
      line-height: 24px
      span
        font-size: 30px
        font-weight: 500


  .col-md-12.text-center.button-container
    display: flex
    justify-content: center
    flex-wrap: wrap
    position: relative
    &.see-more:before
      content: ''
      width: 100%
      height: 100px
      background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%)
      position: absolute
      top: -100
    a
      margin-top: 10px
      cursor: pointer
   