.topic-article-content.topic-article-action
  background-color: #FFF
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.51)
  padding: 26px 57 23px
  .topic-action-title
    font-size: 26px
    font-family: 'Roboto', sans-serif
    font-weight: 500
    text-align: left
    color: #000
    line-height: 32px
  .topics-poll
    .poll-options
      .poll-btn
        color: #707070
        text-transform: none
        font-size: 18px
        padding-left: 0
        display: flex
        align-items: center
        flex-wrap: wrap
        .circle
          position: static
        .poll-option-label
          margin-left: 10px
          font-weight: 300
      .btn-primary
        background-color: #3995D6
