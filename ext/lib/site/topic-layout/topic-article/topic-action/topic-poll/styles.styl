  .topics-poll
    .poll-options
      display: flex
      flex-wrap: wrap
      flex-direction: column
      .btn-primary
        margin-top: 20px
        background-color: #3995D6
        align-self: center
        width: 102px
      .btn-primary.mx-auto
        width: auto
      .poll-btn
        color: #707070
        text-transform: none
        font-size: 18px
        padding-left: 0
        flex-wrap: wrap
        .poll-option-label
          margin-left: 10px
          font-weight: 300
          position: absolute
          top: 7
          left: 25
        .icon-check
          background-color: #3995D6
        .icon-check::before
          content: ''
      .poll-btn.show-results
        display: flex
        align-items: center
        width: 413px
        height: 26px
        border-radius: 19px
        margin-left: 30px
        margin-bottom: 15px
        background-color: #E8E8E8
        .results-bar 
          border-radius: 19px
          background-color: #BCDDF2
        .poll-results
          margin-right: -90px
          font-weight: 400
          font-size: 20px
          color: #000
          text-align: center
        .poll-option-label
          top: 4
          font-family: 'Roboto', sans-serif
          font-size: 20px
          font-weight: 300
          margin-left: 20px
          color: #000

      .poll-btn.show-results.winner
        .results-bar
          background-color: #3995D6
        .poll-option-label
          font-weight: 400
        .circle.icon-check
          display: none