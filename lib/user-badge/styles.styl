.user-badge,
.notifications-badge
  position relative

  &.active,
  &:hover
    .btn
      color #fff
      background #0072BC

      .caret
        color #fff

  &.active
    .dropdown-list
      display block


  .btn
    height header_height
    border-radius 0
    padding 21px 12px 17px

    .caret
      margin-left 6px

  .dropdown-list
    display none
    position absolute
    right 0
    padding 0
    margin 0
    font-size 16px
    list-style none
    box-shadow 0 6px 12px rgba(#000, .175)
    background-color #0072bc
    border-bottom-left-radius 3px
    border-bottom-right-radius 3px

    a
      display block
      padding 12px 60px 12px 15px
      line-height 1.5
      color black
      text-decoration none
      color #fff
      white-space nowrap

      &:hover
        background #0091ef
        color white

  .profile,
  .notifications
    img
      margin-top -3px
      width 32px
      border-radius 100px

    span.name
      display inline
      margin-left 10px
      font-weight 500
      font-size 16px
      line-height 33px
      padding-top 4px
      padding-right 12px
      max-width 150px

    span.bell-o
      font-weight bold
      line-height 30px
      max-width 150px
      margin 0
      padding-right 0
      font-size 15px
      transform s("rotate(%s)", -25deg)

    .caret
      margin-top -1px
