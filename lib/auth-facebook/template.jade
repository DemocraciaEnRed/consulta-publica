.facebook-auth-form.inner-container.small-container
  .title-page
    .circle
      i.fa.fa-sign-in
    h1= t('signin.login-to') + ' ' + t('common.app-name')
  form(action="/auth/facebook", method="get", role="form")
    button.btn.btn-block.btn-labeled.btn-default.btn-facebook(type="submit")
      span.btn-label.pull-left: i.fa.fa-facebook
      span= t('signin.login-with-facebook')

    - if (config.termsOfService)
      p: a(href="/help/terms-of-service")= t('help.tos.title')
    - if (config.privacyPolicy)
      p: a(href="/help/privacy-policy")= t('help.pp.title')
