.cover
  position relative
  padding 0 10px
  width 100%
  min-height 400px
  height 600px
  height calc(100vh - 72px)
  text-align center
  color #fff
  background-size cover
  background-position center center
  background-image unquote( 'url("/homepage/cover.jpg")' )
  display flex
  justify-content center
  align-items center
  z-index 0

  &:before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba( 0, 0, 0, .5 )

  .content
    z-index 10

  h1
    max-width 500px
    font-size 2.8em
    line-height 1.2em
    margin 0 auto
    padding 0 0 20px
    letter-spacing .01em

  p
    margin 0 auto
    font-size 1.4em
    font-weight 100
    line-height .9em
    letter-spacing .01em

  .cta-btn
    background-color #0273ba
    font-size .9em
    padding 15px 35px
    margin-top 60px
    box-shadow 0px 3px 5px rgba(0,0,0,0.25)

  h1,
  p
    text-shadow 0px 3px 5px rgba(0,0,0,0.6)
