.cover
  display flex
  justify-content center
  align-items center
  z-index 0
  position relative
  padding 80px 0
  min-height 400px
  height 600px
  height calc(100vh - 72px)
  text-align center
  background-size cover
  background-position center center
  background-image unquote( 'url("https://cldup.com/8D9kbn12Nn.jpg")' )

  &:before
    content ''
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba( 0, 0, 0, .5 )

  .container
    z-index 10

  h1
    margin 0 auto .3em
    max-width 500px
    font-size 44px
    line-height 1.1
    font-weight 700
    color #fff

  p
    margin 0 auto
    font-size 20px
    font-weight 400
    line-height 27px
    letter-spacing .01em
    color #fff

  .cta-btn
    background-color #0273ba
    font-size .9em
    padding 15px 35px
    margin-top 60px
    box-shadow 0px 3px 5px rgba(0,0,0,0.25)

  h1,
  p
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.4)
