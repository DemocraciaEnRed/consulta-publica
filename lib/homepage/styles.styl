.no-topics
  margin 90px auto
  width 70%
  color #333
  font-weight 500

.browser-page
  .create-first-topic
    margin 50px auto
    width 65%
    padding-top .8em
    padding-bottom .6em
    border-radius 3px
    text-transform none
    font-size 1em

.homepage
  display flex
  flex-wrap wrap
  justify-content center
  margin-top 100px
  @import './topic-card/styles'

@media only screen and (max-width: 991px)
  .no-topics,
  .create-first-topic
    width 90%

