.topic-container
  display inline-block
  position relative
  margin 20px
  width 360px
  background-color #F5F5F5
  border-radius 4px
  box-shadow 0px 2px 4px rgba(0, 0, 0, 0.1)

  .topic-btn
    position absolute
    bottom 0
    left 20px
    width 100%
    background-color #eee
    color #0273BA
    border-radius 5px
    padding 15px
    margin 0 -20px
    border-top-left-radius 0
    border-top-right-radius 0
    line-height 1.1em
    font-weight 100

    &:hover
      color #fff
      background-color #0273BA

  .topic-card
    display flex
    flex-direction column
    padding 20px
    padding-bottom 60px

    .pic
      height 265px
      margin -20px -20px 0 -20px
      border-radius 4px 4px 0 0
      background-size cover
      background-color #e8e8e8

    .author
      display flex
      align-items center
      margin-top 18px

      .author-img
        width 45px
        height 45px
        border-radius 50%
        margin-right 10px
        background-position center
        background-size 50px auto

      p
        margin 0
        line-height 1.3
        font-size 0.83em

        span
          font-weight 700

    .title
      margin-top 20px
      color #111
      font-size 1.3em

  .participando
    font-size .85em
    margin 9px 0
    font-weight 100
    color #6a6a6a

    strong
      color #0273BA
