footer
  padding 60px 0
  margin-top 30px
  font-size 1em
  background-color #fff

  .footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items flex-start

  .institutional
    max-width 560px

  .logo
    span
      display block
      color #aaa
      &:hover
        opacity 1

  .gob
    padding-right 30px
    margin-bottom 30px

    img
      max-width 100%
      width 300px

  .menu
    padding 0 15px
    text-align left

    a
      display block
      padding 6px 0

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      margin 30px 0
      a
        display block
        line-height 1em

    .gob
      img
        width 300px
