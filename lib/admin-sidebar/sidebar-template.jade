ul.admin-menu.nav.nav-pills.nav-stacked
  - if (config.multiForum && user.staff)
    li: a(href="/admin/forums" data-section='forums')=t('admin-sidebar.forums.title')
  li: a(href="#{forumUrl}/admin/topics" data-section='topics')=t('admin-sidebar.topics.title')
  - if (user.staff)
    li: a(href="#{forumUrl}/admin/tags" data-section='tags')=t('admin-sidebar.tags.title')
    li: a(href="#{forumUrl}/admin/users" data-section='users')=t('admin-sidebar.users.title')
  - if (config.usersWhitelist)
    li: a(href="#{forumUrl}/admin/whitelists" data-section='whitelists')=t('admin-sidebar.whitelists.title')
