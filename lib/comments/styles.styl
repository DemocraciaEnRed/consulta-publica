/* Vars
-------------------------------------------------- */
content_width = 780px
tab_color = #909fa0
/* Comments
-------------------------------------------------- */
.comments
  background #f9f9f9
  padding-top 50px
  padding-bottom 50px

  .lock-spinner
      background-color #f9f9f9

  .no-comments
    text-align center

  .inner-container
    position relative
    max-width content_width
    min-height 5em

    .filter-container
      border-top 1px solid #C6C6C6
      padding-top 15px
      margin-top 15px
      height 20px
      
    .form-toolbar
      margin-top 12px
      height 20px

    .media-list
      margin-top 10px
      
    form.comment-form
      .form-toolbar
        margin-left 10px
        margin-bottom 5px
        font-size 12px
        font-weight bold
        .fa
          margin 0 6px

      .help
        font-size 12px
        font-weight bold
        .fa
          margin 0 6px
      
      .category
        font-size 19px
        margin 5px
        text-transform uppercase
        cursor pointer
        color #818181
        display inline-block

      textarea
        width 100%
        padding 2%
        margin-bottom 4px
      .form-submit
        background-color #484848
        color white
        &:hover
          background-color #2d2d2d
      .form-messages
        color red
        display block
      span.error
        top 6px
        color red
        display block

      .form-inline
        .form-group
          label
            margin: 5px 10px
            font-size 12px
            font-weight bold
            display inline-block

    .btn-block
      margin-bottom: 15px
      span
        text-align left
        display inline-block

    .signup-info
      margin 20px 10px
      font-size 14px
      
    .comments-header
      display flex
      flex-direction row
      justify-content space-between
      .comments-own
        font-size 1.75em
        margin-top 1.2em
        margin-bottom 0.8em
        p
          display inline-block
          font-size .5em
          margin-right 10px
          color #8F8F8F
        .ui-switch 
          display inline-block
          width 50px
          height 31px
          position relative
          input[type="checkbox"]
            position absolute
            top 0px
            left 0px
            width 100%
            height 100%
            z-index 100
            opacity 0
            outline medium none
            margin 0px

          input[type="checkbox"]:checked + .status 
            background #4CD964 none repeat scroll 0% 0%

          .status
            top 8px 
            left 0px
            width 68%
            height 14px
            border-radius 27px
            background #D0D2D3 none repeat scroll 0% 0%
            cursor pointer
            position relative
            display inline-block

          input[type="checkbox"]:checked + .status::before 
            transform translate(70%, -5%)

          .status::before 
            content ""
            display block
            position absolute
            top -2px
            left 0px
            height 20px
            width 20px
            background #FFF none repeat scroll 0% 0%
            box-shadow 0px 0px 1px 0px rgba(0, 0, 0, 0.25), 0px 4px 11px 0px rgba(0, 0, 0, 0.08), -1px 3px 3px 0px rgba(0, 0, 0, 0.14)
            transition transform 100ms ease 0s, -webkit-transform 100ms ease 0s
            border-radius 50%
            transform translate(-5%, -5%)

@media only screen and (max-width 500px)
  .comments-own
    p
      max-width 80px
    .ui-switch
      top -17px

@import './comments'
@import './categories/styles'
@import './filter/styles'
@import './card/styles'
