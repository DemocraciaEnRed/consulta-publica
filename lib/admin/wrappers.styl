.admin-wrapper

  .actions
    .btn
      margin 1px 0
    .dropdown-menu
      font-size 13px
      right 15px
      left 15px
      margin 0
      padding 0
      li a
        cursor pointer
        padding 10px 20px
        white-space normal
      li:last-child a
        padding-bottom 14px
    .fa
      font-size 14px
      margin-right 7px
    .btn-label .fa
      margin-right 0

  .list-group.actions
    margin-bottom 0px
    font-size 13px
    a
      font-weight normal
      cursor pointer
    .fa
      position relative
      top 1px

  .list
    h4
      margin-top 3px
      small
        margin-left 7px

    & > a
      font-weight normal
      &:hover
        color black

    & > .list-group-item
      padding 15

    span.text
      margin-left 5px
      margin-right 10px

    .info
      font-size 14px
      .fa
        width 14px
        text-align center
        margin 0 10px

    .media-object
      width 58px
      border-radius 4px
    .media-body
      padding-left 5px

  @media screen and (max-width: 991px)
    .actions
      .col-xs-12
        margin-bottom 10px

    .list
      h4
        small
          margin 2px 0
